{
  "name": "@dxheroes/local-mcp-core",
  "version": "0.1.3",
  "type": "module",
  "description": "Core abstractions and utilities for MCP server management",
  "repository": {
    "type": "git",
    "url": "https://github.com/DXHeroes/local-mcp-gateway.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run",
    "test:unit": "vitest run --dir __tests__/unit",
    "test:integration": "vitest run --dir __tests__/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check src __tests__",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@types/node": "^24.10.1",
    "tsdown": "^0.16.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@dxheroes/local-mcp-database": "workspace:*"
  }
}
