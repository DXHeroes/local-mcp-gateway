{
  "name": "@local-mcp/database",
  "version": "0.1.0",
  "type": "module",
  "description": "SQLite database layer with migrations and repositories",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run --dir __tests__/unit --passWithNoTests",
    "test:integration": "vitest run --dir __tests__/integration --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/migrations/migration-runner.ts",
    "seed": "tsx src/seeds/seed-runner.ts"
  },
  "dependencies": {
    "@local-mcp/config": "workspace:*",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@local-mcp/core": "workspace:*"
  }
}
