{
  "name": "@dxheroes/local-mcp-database",
  "version": "0.1.1",
  "description": "Database layer for MCP server management using SQLite and Drizzle ORM",
  "repository": {
    "type": "git",
    "url": "https://github.com/DXHeroes/local-mcp-gateway.git",
    "directory": "packages/database"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run --dir __tests__/unit --passWithNoTests",
    "test:integration": "vitest run --dir __tests__/integration --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/migrations/migration-runner.ts",
    "seed": "tsx src/seeds/seed-runner.ts"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@dxheroes/local-mcp-core": "workspace:*"
  }
}
