{
  "name": "@dxheroes/local-mcp-database",
  "version": "0.1.4",
  "type": "module",
  "description": "Database layer for MCP server management using SQLite and Prisma ORM",
  "repository": {
    "type": "git",
    "url": "https://github.com/DXHeroes/local-mcp-gateway.git",
    "directory": "packages/database"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./generated/prisma": {
      "import": "./src/generated/prisma/index.js",
      "types": "./src/generated/prisma/index.d.ts"
    },
    "./generated/zod": {
      "import": "./src/generated/zod/index.js",
      "types": "./src/generated/zod/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm prisma:generate && tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist src/generated",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run --dir __tests__/unit --passWithNoTests",
    "test:integration": "vitest run --dir __tests__/integration --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:seed": "tsx src/seeds/seed.ts",
    "db:reset": "pnpm prisma:migrate:reset && pnpm prisma:seed"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@types/node": "^25.0.6",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "zod-prisma-types": "^3.3.10"
  },
  "peerDependencies": {
    "@dxheroes/local-mcp-core": "workspace:*"
  }
}
