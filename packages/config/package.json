{
  "name": "@dxheroes/local-mcp-config",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared configuration for TypeScript, Vitest, and Vite",
  "repository": {
    "type": "git",
    "url": "https://github.com/DXHeroes/local-mcp-gateway.git",
    "directory": "packages/config"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    },
    "./vitest": {
      "import": "./dist/vitest.mjs",
      "require": "./dist/vitest.cjs",
      "types": "./dist/vitest.d.mts"
    },
    "./typescript": {
      "import": "./dist/typescript.mjs",
      "require": "./dist/typescript.cjs",
      "types": "./dist/typescript.d.mts"
    },
    "./vite": {
      "import": "./dist/vite.mjs",
      "require": "./dist/vite.cjs",
      "types": "./dist/vite.d.mts"
    },
    "./tsdown": {
      "import": "./dist/tsdown.mjs",
      "require": "./dist/tsdown.cjs",
      "types": "./dist/tsdown.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsdown": "^0.16.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "typescript": "^5.6.3",
    "vite": "^7.0.0",
    "vitest": "^4.0.8"
  }
}
