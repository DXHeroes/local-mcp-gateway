{
  "name": "@dxheroes/local-mcp-custom-mcp-loader",
  "version": "0.1.0",
  "type": "module",
  "description": "Custom MCP server loader with hot-reloading support",
  "repository": {
    "type": "git",
    "url": "https://github.com/DXHeroes/local-mcp-gateway.git",
    "directory": "packages/custom-mcp-loader"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run --dir __tests__/unit",
    "test:integration": "vitest run --dir __tests__/integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@dxheroes/local-mcp-core": "workspace:*",
    "chokidar": "^4.0.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@types/chokidar": "^2.1.7",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "@dxheroes/local-mcp-core": "workspace:*"
  }
}
