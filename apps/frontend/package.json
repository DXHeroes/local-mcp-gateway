{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "description": "React 19 frontend for Local MCP Gateway",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "vite --mode https",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "serve -s dist -l 3000",
    "test": "vitest run --passWithNoTests --exclude '**/e2e/**'",
    "test:unit": "vitest run --dir __tests__/unit",
    "test:integration": "vitest run --dir __tests__/integration",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dxheroes/local-mcp-config": "workspace:*",
    "@dxheroes/local-mcp-ui": "workspace:*",
    "@tanstack/react-query": "^5.90.8",
    "@toon-format/toon": "^1.0.0",
    "lucide-react": "^0.553.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.5",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "jsdom": "^27.2.0",
    "msw": "^2.12.1",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
