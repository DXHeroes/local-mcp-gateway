{
  "name": "local-mcp-gateway",
  "version": "0.1.0",
  "private": true,
  "description": "Local MCP Gateway - Gateway for MCP servers with custom MCP support",
  "scripts": {
    "setup": "bash scripts/setup-env.sh",
    "dev": "turbo run dev",
    "dev:https": "turbo run dev:https",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:frontend": "turbo run dev --filter=frontend",
    "build": "turbo run build",
    "start": "pnpm build && concurrently \"pnpm --filter backend start\" \"pnpm --filter frontend start\"",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:mcp": "tsx scripts/test-with-playwright-mcp.ts",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "turbo run typecheck",
    "check": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "create-custom-mcp": "node scripts/create-custom-mcp.js",
    "create-package": "node scripts/create-package.js",
    "db:seed": "pnpm --filter @local-mcp/database seed",
    "db:reset": "rm -f ~/.local-mcp-gateway-data/local-mcp-gateway.db && pnpm db:seed"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "gateway",
    "ai",
    "claude",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.6",
    "@biomejs/biome": "^2.3.5",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@playwright/test": "^1.56.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@vitest/coverage-v8": "^4.0.8",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.6",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11"
  }
}
